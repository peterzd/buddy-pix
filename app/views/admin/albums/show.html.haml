/ BEGIN PAGE CONTAINER
.container-fluid
  / BEGIN PAGE HEADER
  .row-fluid
    .span12
      / BEGIN PAGE TITLE &amp; BREADCRUMB
      %ul.breadcrumb
        %li
          %i.icon-user
          = link_to "Cards", admin_albums_path
          %span.divider /
        %li Card Details
      / END PAGE TITLE &amp; BREADCRUMB
  / END PAGE HEADER
  / BEGIN PAGE CONTENT
  #page.dashboard
    .row-fluid
      .span12
        / BEGIN EXAMPLE TABLE PORTLET
        .widget
          .widget-title
            %h4
              %i.icon-reorder
              #{@album.name} - #{@album.private? ? "Private" : "Public"}
            %span.tools
              %b Creator: #{@album.creator.user_name}
              \&nbsp;&nbsp;
          .widget-body
            .clearfix
              = form_tag admin_album_path(@album), method: :get do
                .control-group.pull-left.mr10
                  .controls
                    .control-group.pull-left.mr10
                      .controls
                        .input-append.date.date-picker{"data-date" => "#{@start_date}", "data-date-format" => "dd-mm-yyyy", "data-date-viewmode" => "years"}
                          %label.control-label.inline.mt5.mr10 Starts Date:
                          %input.input-small.date-picker{:size => "16", :type => "text", :value => "#{@start_date}", name: "start_date", id: "start_date"}
                          %span.add-on
                            %i.icon-calendar
                    .control-group.pull-left.mr10
                      .controls
                        .input-append.date.date-picker{"data-date" => "#{@end_date}", "data-date-format" => "dd-mm-yyyy", "data-date-viewmode" => "years"}
                          %label.control-label.inline.mt5.mr10 End Date:
                          %input.input-small.date-picker{:size => "16", :type => "text", :value => "#{@end_date}", name: "end_date", id: "end_date"}
                          %span.add-on
                            %i.icon-calendar
                %div
                  = submit_tag "Submit", class: "btn"

            %table.table.table-striped.table-bordered.table_listed
              %thead
                %tr
                  %th Report Date
                  %th Followed Users
                  %th Posts in Card
                  %th Comments in Card
                  %th Likers in card
              %tbody
                - (@start_date .. @end_date).each do |date|
                  %tr.odd.gradeX
                    %td #{date}
                    %td= @album.followers_per_day(date).count
                    %td= @album.posts_per_day(date).count
                    %td= @album.comments_per_day(date).count
                    %td= @album.likers_per_day(date).count
        / END EXAMPLE TABLE PORTLET
    .row-fluid
      .span12
        / BEGIN GALLERY MANAGER PORTLET
        .widget
          .widget-title
            %h4
              %i.icon-reorder
              Cover Image
            %span.tools
              %a{:href => "upload_img.html"}
                %i.icon-edit
                Edit Cover Images &nbsp;&nbsp;
          .widget-body
            / BEGIN GALLERY MANAGER LISTING
            .row-fluid
              .span2
                .thumbnail
                  .item
                    %a.fancybox-button{"data-rel" => "fancybox-button", :href => "#{@album.cover_image_url(:thumb)}", :title => "Photo"}
                    .zoom
                      = image_tag @album.cover_image_url(:thumb), alt: "Photo"
                      .zoom-icon

