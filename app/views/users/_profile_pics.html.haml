.p10.fl.w100
  %figure.profile_pic.round.img_fill
    = image_tag @user.profile_cover_url(:medium)
  - class_str = @user.cover_photo_url(:medium).nil? ? "no_img" : ""
  %figure.profile_cover.img_fill.fl.w100{ class: class_str }
    - if @user.cover_photo_url(:medium).nil?
      = link_to content_tag(:i, "", class: "fa fa-camera") + "&nbsp;&nbsp;Add Cover Photo".html_safe , "#", class: "btn cover_btn"
    - else
      = image_tag (ImageDecorator.cover_photo_img(@user))
    %hgroup.head_row.bs
      %h2= @user.user_name
    .info_row
      .info_cell.bs.tooltip{ title: "Cards" }
        %i.pe-7s-albums
        %span= @user.created_albums.count
      .info_cell.bs.tooltip{:title => "Images"}
        %i.pe-7s-photo-gallery
        %span= @user.uploaded_photos.count
      .info_cell.bs.tooltip{:title => "Likes"}
        %i.pe-7s-like
        %span= @user.total_likes
      .info_cell.bs.tooltip{:title => "Comments"}
        %i.pe-7s-chat
        %span= @user.total_comments

:javascript
  $('.tooltip').tooltip({
      position: {
        my: "center+10 bottom",
        at: "center top",
        using: function( position, feedback ) {
          $( this ).css( position );
          $( "<div>" )
            .addClass( "arrow" )
            .addClass( feedback.vertical )
            .addClass( feedback.horizontal )
            .appendTo( this );
        }
      }
    });
