= form_for [:admin, @blog], html: { class: "form-horizontal" } do |f|
  .control-group
    = f.label :title, "Blog Title", class: "control-label"
    .controls
      = f.text_field :title, class: "span6"
  .control-group
    = f.label :content, "Blog Details", class: "control-label"
    .controls
      = f.text_area :content, class: "ckeditor"
  .form-actions
    = f.submit "Save", class: "btn btn-primary"



