  #page.dashboard
    .row-fluid
      .span12
        / BEGIN EXAMPLE TABLE PORTLET
        .widget
          .widget-title
            %h4
              %i.icon-reorder
              All users list
          .widget-body
            %table.table.table-striped.table-bordered.table_listed
              %thead
                %tr
                  %th User ID
                  %th Email
                  %th First name
                  %th Last name
                  %th Created Date
                  %th Last Login
                  %th Actions
              %tbody
                - @users.each do |user|
                  %tr.odd.gradeX
                    %td= user.id
                    %td= user.email
                    %td= user.first_name
                    %td= user.last_name
                    %td= user.created_at.to_date
                    %td= user.last_sign_in_at.nil? ? "" : user.last_sign_in_at.to_date
                    %td.center
                      = link_to content_tag(:i, "", class: "icon-zoom-in"), admin_user_path(user, start_date: 1.week.ago.to_date, end_date: Date.today), class: "icon huge"
                      = link_to content_tag(:i, "", class: "icon-remove"), admin_user_path(user), method: :delete, data: { confirm: "sure to destroy this card?" }, class: "icon huge"

