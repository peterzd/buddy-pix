  / BEGIN PAGE CONTENT
  #page.dashboard
    .row-fluid
      .span12
        / BEGIN EXAMPLE TABLE PORTLET
        .widget
          .widget-title
            %h4
              %i.icon-reorder>
              Summary Report
          .widget-body
            .clearfix
              = form_tag admin_reports_path, method: :get do
                .control-group.pull-left.mr10
                  .controls
                    .control-group.pull-left.mr10
                      .controls
                        .input-append.date.date-picker{"data-date" => "#{@start_date}", "data-date-format" => "dd-mm-yyyy", "data-date-viewmode" => "years"}
                          %label.control-label.inline.mt5.mr10 Starts Date:
                          %input.input-small.date-picker{:size => "16", :type => "text", :value => "#{@start_date}", name: "start_date", id: "start_date"}
                          %span.add-on
                            %i.icon-calendar
                    .control-group.pull-left.mr10
                      .controls
                        .input-append.date.date-picker{"data-date" => "#{@end_date}", "data-date-format" => "dd-mm-yyyy", "data-date-viewmode" => "years"}
                          %label.control-label.inline.mt5.mr10 End Date:
                          %input.input-small.date-picker{:size => "16", :type => "text", :value => "#{@end_date}", name: "end_date", id: "end_date"}
                          %span.add-on
                            %i.icon-calendar
                %div
                  = submit_tag "Submit", class: "btn"
            %table.table.table-striped.table-bordered.table_listed
              %thead
                %tr
                  %th Day
                  %th User Registered
                  %th Private cards created
                  %th Public cards created
                  %th Total Cards
                  %th Posts
                  %th Comments
                  %th like
              %tbody
                - ( @start_date .. @end_date ).each do |date|
                  %tr.odd.gradeX
                    %td= date
                    %td= User.registered_per_day(date).count
                    %td= Album.total_private_cards_per_day(date).count
                    %td= Album.total_public_cards_per_day(date).count
                    %td= Album.total_cards_per_day(date).count
                    %td= Photo.total_posts_per_day(date).count
                    %td= Comment.total_comments_per_day(date).count
                    %td= Like.total_likes_per_day(date).count

