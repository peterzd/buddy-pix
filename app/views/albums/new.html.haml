%section.clearfix.inner_body
  .pc.cm
    = form_for @album, url: cards_path do |f|
      %h4 Create New Card
      %aside.fl.w50.p10
        .p10
          = f.text_field :name, placeholder: "Card Name"
        .p10
          = f.text_field :last_name, placeholder: "Last Name"
        .p10
          = f.text_area :caption, placeholder: "Description(optional)"
        .p10
          = f.label "Public"
          = f.radio_button "private", "false"
          = f.label "Private"
          = f.radio_button "private", "true"
        .p10
          = f.submit "Submit"
      %aside.fl.w50.p10.ac
        %h4.ph10.mt10.al
          %small Cover Photo
        %figure.uplaod.cover_img
        .btn.browse_btn.inline.mt20
          = file_field_tag "photo"
          Browse Images

