%section.clearfix.inner_body
  .pc.cm
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt20 form_box p20 clearfix log_box cm" }) do |f|
      %article.ph10
        %h4 Forgot Password
        %p Please enter your email below. You will receive an email with your new password.
      .p10
        = f.email_field :email, placeholder: "Enter Your Email Id", autofocus: true
      .p10
        = f.submit "Send Email"
