  #page.dashboard
    .row-fluid
      .span12
        / BEGIN EXAMPLE TABLE PORTLET
        .widget
          .widget-title
            %h4
              %i.icon-reorder
              Card Report
          .widget-body
            .clearfix
              = form_tag cards_report_admin_reports_path, method: :get do
                .control-group.pull-left.mr10
                  .controls
                    .control-group.pull-left.mr10
                      .controls
                        .input-append.date.date-picker{"data-date" => "#{@start_date}", "data-date-format" => "dd-mm-yyyy", "data-date-viewmode" => "years"}
                          %label.control-label.inline.mt5.mr10 Starts Date:
                          %input.input-small.date-picker{:size => "16", :type => "text", :value => "#{@start_date}", name: "start_date", id: "start_date"}
                          %span.add-on
                            %i.icon-calendar
                    .control-group.pull-left.mr10
                      .controls
                        .input-append.date.date-picker{"data-date" => "#{@end_date}", "data-date-format" => "dd-mm-yyyy", "data-date-viewmode" => "years"}
                          %label.control-label.inline.mt5.mr10 End Date:
                          %input.input-small.date-picker{:size => "16", :type => "text", :value => "#{@end_date}", name: "end_date", id: "end_date"}
                          %span.add-on
                            %i.icon-calendar
                %div
                  = submit_tag "Submit", class: "btn"
            %table.table.table-striped.table-bordered.table_listed
              %thead
                %tr
                  %th Card Name
                  %th Created Date
                  %th Card Type
                  %th Followers
                  %th Posts
                  %th Comments
                  %th Likes
              %tbody
                - Album.all.each do |album|
                  %tr.odd.gradeX
                    %td= album.name
                    %td= album.created_at.to_date
                    %td= album.private? ? "Private" : "Public"
                    %td= album.total_followers_range(@start_date, @end_date).count
                    %td= album.total_posts_range(@start_date, @end_date).count
                    %td= album.total_comments_range(@start_date, @end_date)
                    %td= album.total_likes_range(@start_date, @end_date)





