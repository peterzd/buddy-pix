%section.clearfix.inner_body
  .pc.cm
    = form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt20 form_box p20 clearfix") do |f|
      %aside.fl.w50.mt10
        %article.p10
          %h4 Login
          %p Nullam efficitur viverra arcu eget ullamcorper. Vestibulum tincidunt lacinia massa nec lacinia.
        .ph10
          = hidden_field_tag "invitation_token", @invitation_token if @invitation_token
        .ph10
          = f.email_field :email, autofocus: true, placeholder: "Email Id"
        .p10.mt10
          = f.password_field :password, autocomplete: "off", placeholder: "Password"
        .box_link.p10.ac.fl.w50
          = link_to content_tag(:i, "", class: "fa fa-facebook") + "Facebook Login", user_omniauth_authorize_path(:facebook), class: "fb"
        .box_link.p10.ac.fl.w50
          = link_to content_tag(:i, "", class: "fa fa-google") + "Google Login", user_omniauth_authorize_path(:google_oauth2), class: "g"
        .p10.fl
          = f.submit "Login"

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %aside.fl.w50.mt10
        %article.p10
          %h4 Sign up
          %p Nulla hendrerit maximus tellus a pharetra. Nunc vehicula, justo a eleifend ultrices, justo turpis hendrerit eros, eu fermentum libero diam non tortor.
        .ph10
          = f.email_field :email, autofocus: true, placeholder: "Email id"
        .p10.mt10
          = f.password_field :password, autocomplete: "off", placeholder: "Password"
        .p10
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password"
        .p10.fl
          = f.submit "Send"

