= form_for @support do |f|
  - if @support.errors.any?
    #error_explanation
      %h2= "#{pluralize(@support.errors.count, "error")} prohibited this support from being saved:"
      %ul
        - @support.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender_name
    = f.text_field :sender_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :message
    = f.text_area :message
  .actions
    = f.submit 'Save'
