%html{:lang => "en"}
  / <![endif]
  / BEGIN HEAD
  %head
    %meta{:charset => "utf-8"}/
    %title BuddyPix-admin
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = favicon_link_tag 'favicon.ico'
    -# main css
    = stylesheet_link_tag "admin", media: "all"
    = csrf_meta_tag
    = javascript_include_tag "admin"
    /[if lt IE 9] <script src="assets/js/html5.js"></script><script src="assets/js/css3-mediaqueries.js"></script>

  %body
    %header.clearfix
      %nav.navbar.navbar-default{ role: "navigation" }
        .container-fluid
          .navbar-header
            = link_to image_tag("buddypix_logo.png", alt: "Logo"), "#"
          .links
            %ul.nav.navbar-nav
              %li
                = link_to "Dashboard", admin_path
              %li
                = link_to "Users", admin_users_path
              %li
                = link_to "Cards", admin_albums_path
              %li
                = link_to "Photos", admin_photos_path
              %li
                = link_to "Blogs", admin_blogs_path
              %li
                = link_to "Static Pages", admin_static_pages_path
              %li
                = link_to "Reports", admin_reports_path
            %ul.nav.navbar-nav.navbar-right
              %li
                = link_to "Log out", destroy_user_session_path, method: :delete
    .container.clearfix
      = yield

:javascript
  jQuery(document).ready(function() {
    // initiate layout and plugins
    App.init();
  });
