- creator = @photo.creator
- card = @photo.album
%section.clearfix.inner_body
  .pc.cm
    .p10.feed_box.mt20.clearfix
      .top_row.clearfix
        %aside.fl.p10.user_info
          %figure.img_fill.round.fl
            = image_tag creator.profile_cover_url(:medium)
          .info_side
            %h3=  creator.user_name
            %p= @photo.created_at.strftime("%I:%M %p,%d %b %Y")
        %aside.fr.p10.h3.ar.cat_side
          %h3= card.name
          %p= card.private? ? "Private" : "Public"
      %figure.clearfix
        = image_tag @photo.picture_url :medium
      .f_bottom.clearfix.fl.w100
        .p10
          %p= @photo.description
        %hr.mb0
        = link_to content_tag(:i, "", class: "pe-7s-like") + content_tag(:strong, "#{@photo.likes.count}"), "#", class: "p10 inline like_btn"
        = link_to content_tag(:i, "", class: "pe-7s-chat") + content_tag(:strong, "#{@photo.comments.count}"), "#", class: "p10 inline"
    .fr.cr.follow_row_box.mt20
      %ul.fl
        - remaining_like = @photo.likes.count - 3
        - @photo.recent_likes(3).each do |like|
          %li.img_fill
            = image_tag like.liker.profile_cover_url(:medium)
            %span{ class: "#{like.mood}" }
              = like.mood
        + #{remaining_like > 0 ? remaining_like : 0}
      %i.pe-7s-angle-right.like_user_btn
    .fl.w100
      .cmt_row.bs.clearfix
        %figure
        %aside
          %h4.fl Joseph Korian
          %p.fr
            %strong 10 minutes ago
