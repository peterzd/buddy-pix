  #page.dashboard
    .row-fluid
      .span12
        / BEGIN EXAMPLE TABLE PORTLET
        .widget
          .widget-title
            %h4
              %i.icon-pencil
              Write Blogs
            %span.tools
              = link_to content_tag(:i, "", class: "icon-plus") + " Add Blog ", new_admin_blog_path
          .widget-body
            %table.table.table-striped.table-bordered.table_listed
              %thead
                %tr
                  %th #
                  %th Title
                  %th Creator
                  %th Created_at
                  %th Actions
              %tbody
                - @blogs.each do |blog|
                  %tr.odd.gradeX
                    %td= blog.id
                    %td= sanitize blog.title
                    %td= Admin
                    %td= blog.created_at.utc
                    %td.center
                      = link_to content_tag(:i, "", class: "icon-zoom-in"), edit_admin_blog_path(blog), class: "icon huge"
                      \&nbsp;
                      = link_to content_tag(:i, "", class: "icon-remove"), admin_blog_path(blog), method: :delete, data: { confirm: "sure to remove this blog?" }, class: "icon huge"

